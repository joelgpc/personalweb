{
  "name": "joel-mercado-portfolio",
  "private": true,
  "version": "1.0.0",
  "description": "Portfolio personal de Joel Mercado desarrollado con React, TypeScript y Vite",
  "type": "module",
  "author": "Joel Mercado",
  "homepage": "https://github.com/joelmercado/portfolio#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joelmercado/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/joelmercado/portfolio/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "serve": "vite preview --port 3000",
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.16",
    "@types/react-scrollspy": "3.3.9",
    "framer-motion": "11.18.2",
    "helmet": "7.1.0",
    "i18next": "24.2.2",
    "i18next-browser-languagedetector": "8.0.2",
    "i18next-http-backend": "3.0.2",
    "lucide-react": "0.344.0",
    "react": "18.3.1",
    "react-dom": "18.2.0",
    "react-google-recaptcha": "3.1.0",
    "react-helmet-async": "1.3.0",
    "react-i18next": "15.4.0",
    "react-intersection-observer": "9.8.1",
    "react-scrollspy": "3.4.3",
    "tailwindcss-animate": "1.0.7",
    "usehooks-ts": "3.1.1",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "9.9.1",
    "@types/node": "20.11.19",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.2.18",
    "@types/react-google-recaptcha": "2.1.9",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "10.4.20",
    "eslint": "9.9.1",
    "eslint-plugin-react-hooks": "5.1.0-rc.0",
    "eslint-plugin-react-refresh": "0.4.11",
    "globals": "15.9.0",
    "husky": "9.0.11",
    "postcss": "8.5.1",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "tailwindcss": "3.4.17",
    "terser": "5.27.2",
    "typescript": "5.5.3",
    "typescript-eslint": "8.3.0",
    "vite": "5.4.2"
  }
}
